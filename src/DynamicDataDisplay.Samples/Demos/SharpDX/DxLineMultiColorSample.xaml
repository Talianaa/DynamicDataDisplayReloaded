<Page x:Class="DynamicDataDisplay.Samples.Demos.SharpDX.DxLineMultiColorSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DxLineMultiColorSample">

    <Grid>
        <d3:ChartPlotter>
            <d3:SharpDXHost/>
            <d3:DxLineMultiColor DataSource="{Binding Points1}"/>
            <d3:DxLineMultiColor DataSource="{Binding Points2}"/>
            <d3:DxLineMultiColor DataSource="{Binding Points3}"/>
        </d3:ChartPlotter>
    </Grid>
</Page>
